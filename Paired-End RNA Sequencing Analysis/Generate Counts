#!/bin/bash
#SBATCH --job-name=featurecounts         
#SBATCH --output=featurecounts.out        
#SBATCH --error=featurecounts.err         
#SBATCH --time=06:00:00            
#SBATCH --cpus-per-task=8          
#SBATCH --mem=80G

#Generate counts using featureCounts
featureCounts -T 8 -p -t exon -g gene_id \
  -a /file/to/reference/genome/Homo_sapiens.GRCh38.114.gtf \
  -o counts.txt \
  /file/to/input/bam/files/*.bam
